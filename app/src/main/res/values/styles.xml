<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="diagonalStyle">
        <item name="android:background">@drawable/spash_bg</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.EditText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
    <style name="TextAppearance.AppCompat.Medium.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/colorCloud</item>

    </style>

</resources>
