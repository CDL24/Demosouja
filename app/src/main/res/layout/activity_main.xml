<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        style="@style/diagonalStyle"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/image_logo"
            android:src="@drawable/mortarboard"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView2"
            android:rotation="20"
            android:src="@drawable/ic_medal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="50dp" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView3"
            android:rotation="20"
            android:src="@drawable/ic_book_read"
            android:layout_marginBottom="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView4"
            android:rotation="20"
            android:src="@drawable/ic_set_square"
            android:layout_below="@+id/imageView2"
            android:layout_alignEnd="@+id/image_logo"
            android:layout_marginTop="33dp" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView5"
            android:rotation="20"
            android:src="@drawable/ic_blackboard"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toStartOf="@+id/image_logo" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView6"
            android:rotation="20"
            android:src="@drawable/ic_diploma"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imageView2" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView7"
            android:rotation="20"
            android:src="@drawable/ic_flask"
            android:layout_below="@+id/image_logo"
            android:layout_alignStart="@+id/imageView3" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/imageView8"
            android:rotation="20"
            android:src="@drawable/ic_backpack"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignStart="@+id/imageView7" />
    </RelativeLayout>
</RelativeLayout>
